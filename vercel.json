{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "backend/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/index.js"
    },
    { "src": "/", "dest": "/frontend/$1" },
    { "src": "/_not-found", "dest": "/frontend/$1" },
    { "src": "/login", "dest": "/frontend/$1" },
    { "src": "/sign-up", "dest": "/frontend/$1" },
    { "src": "/todo", "dest": "/frontend/$1" }
  ]
}
